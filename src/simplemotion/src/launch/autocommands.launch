    Description: Launch file to launch specific auto command based on 3 user arguments
-->

<launch>
    <arg
        name="avoidObstacles"
        default="1"
    />
    <arg
        name="box"
        default="0"
    />
    <arg
        name="followObjects"
        default="0"
    />

    <group if=="$(arg avoidObstacles)">
        <node name="avoid_obstacles", pkg="simplemotion", type="avoidObstacles.py", output="screen"/>
    </group>

    <group if=="$(arg box)">
        <node name="box", pkg="simplemotion", type="box.py", output="screen"/>
    </group>

    <group if=="$(arg followObjects)">
        <node name="follow_objects", pkg="simplemotion", type="followObjects.py", output="screen"/>
    </group>
</launch>